<legend>Создание родителя</legend>

<%= form_for @parent, :html => {:class => "form-horizontal"} do |f| %>
  <div class="control-group">
    <%= f.label :parent_last_name, "Фамилия", :class => "control-label" %>      

    <div class="controls">
      <%= f.text_field :parent_last_name, :placeholder => @everpresent_field_placeholder %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :parent_first_name, "Имя", :class => "control-label" %>

    <div class="controls">
      <%= f.text_field :parent_first_name, :placeholder => @everpresent_field_placeholder %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :parent_middle_name, "Отчество", :class => "control-label" %>

    <div class="controls">
      <%= f.text_field :parent_middle_name, :placeholder => @everpresent_field_placeholder %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :parent_sex, "Пол", :class => "control-label" %>

    <div class="controls">
      <%= label_tag nil, nil, :class => "radio" do %>
        <%= f.radio_button :parent_sex, 'm' %>
        Мужской
      <% end %>

      <%= label_tag nil, nil, :class => "radio" do %>
        <%= f.radio_button :parent_sex, 'w' %>
        Женский
      <% end %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :parent_birthday, "Дата рождения", :class => "control-label" %>

    <div class="controls">
      <%= f.text_field :parent_birthday, :placeholder => @everpresent_field_placeholder %>
    </div>
  </div>
  
  <%= f.fields_for :user, @user do |builder| %>                                           <%# Adding @user allows us to send user_params for belongs_to model. %>
    <%= render :partial => 'shared/user_fields', 
        :locals => { :f => builder,
                     :field_placeholder => @everpresent_field_placeholder,
                     :login_field_id => "parent_user_attributes_user_login",
                     :password_field_id => "parent_user_attributes_password" 
                    }
    %>
  <% end %>
  
  <%= f.submit "Создать", :class => "btn btn-large btn-success" %>
<% end %>  