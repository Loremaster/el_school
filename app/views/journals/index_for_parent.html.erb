<% unless @pupil.nil? %>
  <% if @pupil_curriculums_exist %>
    <div style="margin-top: 18px;" class="btn-toolbar">
      <div class="btn-group">
        <a href="#" data-toggle="dropdown" class="btn dropdown-toggle">
          Выбрать предмет
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
    			<% @pupil_curriculums.each do |c| %>
    			  <li>
    			    <%= link_to c.qualification.subject.subject_name,
    			        journals_show_parent_path( :curr_id => c.id,:p_id => params[:p_id] ) %>
    			  </li>
    			<% end %>
        </ul>
      </div>
    </div>


  <% end %>
<% end %>