<legend>Редактирование предмета</legend>

<%= form_for @subject, :html => {:class => "form-horizontal"} do |f| %>
  <%= field_set_tag do %>
    <div class="control-group">
      <%= f.label :subject_name, "Имя предмета", :class => "control-label" %>
      
      <div class="controls">
        <%= f.text_field :subject_name %>
      </div>
    </div>
  <% end %>
  
  <%= f.submit "Обновить", :class => "btn btn-large btn-success" %>
<% end %>