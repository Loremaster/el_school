<legend>Редактирование предмета</legend>

<%= form_for @subject, :html => {:class => "form-horizontal"} do |f| %>
  <%= field_set_tag do %>    
    <%= render :partial => 'subject_fields', 
         :locals => { 
                      :f => f,
                      :field_placeholder => @everpresent_field_placeholder,
                      :subject_name => @subject.subject_name,
                     }
      %>
  <% end %>
  
  <%= f.submit "Обновить", :class => "btn btn-large btn-warning" %>
<% end %>