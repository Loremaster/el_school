<legend>Создание предмета</legend>

<%= form_for @subject, :html => {:class => "form-horizontal"} do |f| %>
  <%= field_set_tag do %>    
    <%= render :partial => 'subject_fields', 
        :locals => { 
                     :f => f,
                     :field_placeholder => @everpresent_field_placeholder,
                     :subject_name => @subj_text,
                    }
    %>
    
    <%= f.submit "Создать", :class => "btn btn-large btn-success" %>
  <% end %>
<% end %>