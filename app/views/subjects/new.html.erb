<legend>Создание предмета</legend>

<%= form_for @subject, :html => {:class => "form-horizontal"} do |f| %>
  <%= field_set_tag do %>
    <div class="control-group">
      <%= f.label :subject_name, "Имя предмета", :class => "control-label" %>
      
      <div class="controls">
        <%= f.text_field :subject_name,
                         :value => @subj_text,
                         :placeholder => @everpresent_field_placeholder %>
      </div>
    </div>
    
    <%= f.submit "Создать", :class => "btn btn-large btn-success" %>
  <% end %>
<% end %>