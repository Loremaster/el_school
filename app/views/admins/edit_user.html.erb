<legend>Редактирование</legend>

<%= form_for @user, :url => update_user_url( :id => params[:id] ), :html => {:class => "form-horizontal"} do |f| %>
		<%= field_set_tag do %>
		  <div class="control-group">
		    <%= f.label :user_login, "Логин учетной записи", :class => "control-label" %>
		    <div class="controls">
		      <%= f.text_field :user_login, 
                                        :placeholder => @everpresent_field_placeholder %>
				  <%= link_to_function "Сгенерировать логин", "generate_login()", :class => "btn" %>
		    </div>
		  </div>

		  <div class="control-group">
		    <%= f.label :password, "Пароль учетной записи", :class => "control-label" %>
		    <div class="controls">
		      <%= f.text_field :password, 
                                      :placeholder => @everpresent_field_placeholder %>
					<%= link_to_function "Сгенерировать пароль", "generate_password()", :class => "btn" %>
		    </div>
		  </div>
		  
		<% end %>
		

    <%= f.submit "Обновить", :class => "btn btn-large btn-success" %>
<%  end %>