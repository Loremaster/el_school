<legend>Просмотр и изменение ученика</legend>

<%= form_for @pupil, :html => {:class => "form-horizontal"} do |f| %>
  <%= field_set_tag do %>    
    <%= render :partial => 'pupil_fields', 
        :locals => { 
                     :f => f,
                     :field_placeholder => @everpresent_field_placeholder,
                     :pupil_sex_man => @pupil_sex_man, :pupil_sex_woman => @pupil_sex_woman 
                    }
    %>
    
    <hr/>
    
    <%= f.fields_for :pupil_phone do |pp| %>                                              <%# This shows fields. @pupil_phone add _attributes as i understand. %>      
      <%= render :partial => 'pupil_phones_fields', 
          :locals => { 
                       :pp => pp,
                       :field_placeholder => @everpresent_field_placeholder
                      }
      %>  
    <% end %>
               
    <%= f.submit "Изменить", :class => "btn btn-large btn-warning" %>
    
    <%= link_to_function "Отправить на печать", "javascript:window.print()", 
        :class => "btn btn-inverse" %>
  <% end %>  
<% end %>