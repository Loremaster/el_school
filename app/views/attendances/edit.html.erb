<legend>
  Посещение урока ученика <%= pupil_full_names( @pupil ) %> по предмету <%=  @subject.subject_name %>
</legend>

<%= form_for @attendance, :html => {:class => "form-horizontal"} do |f| %>
  <%= field_set_tag do %>
    <%= hidden_field_tag :class_code, params[:class_code] %>
    <%= hidden_field_tag :subject_name, params[:subject_name] %>

    <%= render :partial => 'attendance_fields',
        :locals => { :f => f, :pupil => @pupil, :lesson => @lesson }
    %>

    <hr/>

    <%= fields_for :estimation do |builder| %>
      <%= render :partial => 'estimations/estimation_fields',
          :locals => { :f => builder, :pupil => @pupil, :reporting => @reporting,
                       :nominals => @nominals }
      %>
    <% end %>

    <%= f.submit "Отметить", :class => "btn btn-large btn-warning" %>
  <% end %>
<% end %>