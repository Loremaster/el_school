<legend>Создание приказа</legend>

<%= form_for @order, :html => {:class => "form-horizontal"} do |f| %>
  <%= field_set_tag do %> 
    <%= render :partial => 'order_fields', 
        :locals => { 
                     :f => f,
                     :field_placeholder => @everpresent_field_placeholder,
                     :choosen_class => @choosen_class, :choosen_pupil => @choosen_pupil
                    }
    %>
                 
    <%= f.submit "Создать", :class => "btn btn-large btn-success" %>
  <% end %>
<% end %>