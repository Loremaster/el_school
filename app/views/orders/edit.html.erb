<legend>Редактирование приказа</legend>

<%= form_for @order, :html => {:class => "form-horizontal"} do |f| %>
  <%= field_set_tag do %>
    <%= render :partial => 'order_fields', 
        :locals => { 
                     :f => f,
                     :field_placeholder => @everpresent_field_placeholder,
                     :choosen_class => @order.school_class_id, 
                     :choosen_pupil => @order.pupil_id 
                    }
    %>
        
    <%= f.submit "Обновить", :class => "btn btn-large btn-warning" %>
  <% end %>
<% end %>