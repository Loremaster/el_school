<legend>Итоги</legend>

<% unless @subject.nil? %>

  <%# CHOOSING CLASS. %>
  <div style="margin-top: 18px;" class="btn-toolbar">
    <div class="btn-group">
      <a href="#" data-toggle="dropdown" class="btn dropdown-toggle">
        Выбрать класс
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
  			<% @classes.each do |c| %>
  			  <li>
  			    <%= link_to c.class_code, results_path( :class_code => c.class_code,
  			                                            :subject_name => params[:subject_name]) %>
  			  </li>
  			<% end %>
      </ul>
    </div>
  </div>

  <%# PUPILS/RESULTS. %>
  <table class="table table-bordered" name="journals">
    <thead>
      <tr>
        <th>Ученик\Итог</th>
        <th>1я Четверть</th>
        <th>2я Четверть</th>
        <th>3я Четверть</th>
        <th>4я Четверть</th>
        <th>Год</th>
      </tr>
    </thead>
    <tbody>
      <% if @pupils_exist %>
        <% @pupils.each do |p| %>
          <tr class="cross"
              onclick = "location.href='<%= new_result_path(
                                        :class_code => params[:class_code],
                                        :subject_name => params[:subject_name],
                                        :p_id => p.id ) %>'">
            <td><%= pupil_full_names( p ) %></td>

            <% results = pupil_results( p, @teacher, @subject.subject_name, @school_class ) %> <%# All results of current pupil for current subject. %>

            <td> <% unless results.nil? %> <%= results.quarter_1 %> <% end %> </td>       <%# quarter_1 estimation %>
            <td> <% unless results.nil? %> <%= results.quarter_2 %> <% end %> </td>       <%# quarter_2 estimation %>
            <td> <% unless results.nil? %> <%= results.quarter_3 %> <% end %> </td>       <%# quarter_3 estimation %>
            <td> <% unless results.nil? %> <%= results.quarter_4 %> <% end %> </td>       <%# quarter_4 estimation %>
            <td> <% unless results.nil? %> <%= results.year %>      <% end %> </td>       <%# year      estimation %>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% end %>