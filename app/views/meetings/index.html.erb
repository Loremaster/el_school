<legend>Список родительских собраний</legend>

<table class="table table-bordered table-striped" name="teachers">
  <thead>
    <tr>
      <th>Тема</th>                     
      <th>Дата</th>                     
      <th>Время</th>                     
      <th>Класс</th>                     
      <th>Кабинет</th>                     
                    
    </tr>
  </thead>
  <tbody>
    <% if @meeting_exist %>        
      <% @meetings.each do |m| %>          
        <tr class="cross" onclick = "location.href='<%= edit_meeting_path( :id => m.id ) %>'">
          <td><%= m.meeting_theme %></td>
          <td><%= m.meeting_date.strftime("%d.%m.%Y") %></td>
          <td><%= m.meeting_time.strftime("%H:%M") %></td>
          <td><%= m.school_class.class_code %></td>
          <td><%= m.meeting_room %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to "Создать собрание", new_meeting_path, :class => "btn btn-primary btn-large" %>